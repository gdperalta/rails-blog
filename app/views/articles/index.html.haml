- content_for :head do
    = render 'home/header'
%h1 Hello from index page
%p Find me in app/views/articles/index.html.erb

%table.table
    %head
        %tr
            %th Title
            %th Content
            %th Action
    %tbody
        -@articles.each do |article|
            %tr
                %td= link_to "#{article.title}", article_path(article)
                %td=article.content
                %td=link_to 'Comments', article_comments_path(article)
                %td=link_to  'Delete', article, method: :delete, data: {confirm: 'Are you sure?'}
