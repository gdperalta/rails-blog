- content_for :head do
  = render 'home/header'
%h1 Hello from index page
%table.table
  %thead
    %tr
      %th Name
      %th Address
      %th Verified
      %th{:colspan => "3"} Actions
  %tbody
    - @authors.each do |author|
      %tr
        %td
          = author.name
        %td
          = author.address
        - if author.is_verified
          %td
            = author.date_verified
        - else
          %td
            = link_to 'Verify', author_verify_path(author), method: :patch, remote:true, data: {confirm: "Verify author #{author.name}?"}, class: 'link'
        %td
          = link_to 'Show', author_path(author), class: 'link'
        %td
          = link_to 'Delete', author, method: :delete, data: {confirm: "Remove author #{author.name}?"}, class: 'link'
        %td
          = link_to 'Edit', edit_author_path(author), class: 'link'
%button.btn
  = link_to 'Create New Author', new_author_path, class: 'link'
