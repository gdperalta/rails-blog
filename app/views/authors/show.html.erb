<% content_for :head do %>
	<%= render 'home/header' %>
<% end %>
<h1>Hello from show page</h1>
<table class="table-show">
	<tr>
		<td>
			Title:
		</td>
		<td colspan='2'>
			<%= @author.name%>
		</td>
	</tr>
	<tr>
		<td>
			Address:
		</td>
		<td colspan='2'>
			<%= @author.address%>
		</td>
	</tr>
	<tr>
		<td>
			Verified:
		</td>
		<% if @author.is_verified %>
			<td>
				<%= @author.date_verified%>
			</td>
		<% else %>
			<td>Not Verified</td>
			<% if false %>
				<td>
					<%= link_to 'Verify Author', verify_author_path(@author), method: :patch, data: {confirm: "Verify author #{@author.name}?"}, class: 'verify-btn'%>
				</td>
			<% end %>
		<% end %>
	</tr>
	<tr>
	</tr>
</table>
<%= link_to 'Go to authors page', authors_path%>
